#!/usr/bin/env bash

set -euo pipefail

opts=()

if [[ $BOOTSTRAP_BOOT_FIRMWARE == uefi ]]; then
    opts+=(--target=x86_64-efi --efi-directory="$BOOTSTRAP_UEFI_MOUNT_DIR" --bootloader-id=GRUB)
else
    opts+=(--target=i386-pc)
fi

arch-chroot "$BOOTSTRAP_MOUNT_DIR" grub-install --recheck "${opts[@]}" "$BOOTSTRAP_INSTALL_DEVICE"
arch-chroot "$BOOTSTRAP_MOUNT_DIR" grub-mkconfig --output=/boot/grub/grub.cfg
