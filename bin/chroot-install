#!/usr/bin/env bash

set -euo pipefail

rsync -v -a --no-owner --no-group "$BOOTSTRAP_DIR"/rootfs/ "$INSTALL_DIR"

rsync -v -a --no-owner --no-group /var/lib/iwd/ "$INSTALL_DIR"/var/lib/iwd

ln -sfv /run/systemd/resolve/stub-resolv.conf "$INSTALL_DIR"/etc/resolv.conf

rm -f "$INSTALL_DIR"/etc/machine-id

export REFLECTOR_COUNTRY=$INSTALL_COUNTRY
template-install /etc/xdg/reflector/reflector.conf

arch-chroot "$INSTALL_DIR" /install.sh
rm "$INSTALL_DIR"/install.sh
