#!/usr/bin/env bash

set -euo pipefail

rsync -v -a --no-owner --no-group "$BOOTSTRAP_DIR"/rootfs/ /mnt

rsync -v -a --no-owner --no-group /var/lib/iwd/ /mnt/var/lib/iwd

ln -sfv /run/systemd/resolve/stub-resolv.conf /mnt/etc/resolv.conf

rm -f /mnt/etc/machine-id

export REFLECTOR_COUNTRY=$INSTALL_COUNTRY
template-install /etc/xdg/reflector/reflector.conf

arch-chroot /mnt /install.sh
rm /mnt/install.sh
