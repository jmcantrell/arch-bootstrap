#!/usr/bin/env bash

set -euo pipefail

rsync -va {,"${BOOTSTRAP_MOUNT_DIR%%/}"}/etc/systemd/networkd.conf.d/
rsync -va --include="20-*.network" --exclude="*" {,"${BOOTSTRAP_MOUNT_DIR%%/}"}/etc/systemd/network/

ln -vsfn /run/systemd/resolve/stub-resolv.conf "$BOOTSTRAP_MOUNT_DIR"/etc/resolv.conf

arch-chroot "$BOOTSTRAP_MOUNT_DIR" systemctl enable systemd-{networkd,resolved}.service
