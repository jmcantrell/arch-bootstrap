#!/usr/bin/env bash

set -euo pipefail

rsync -va {,"${BOOTSTRAP_INSTALL_MOUNT_DIR%%/}"}/etc/systemd/networkd.conf.d/
rsync -va /etc/systemd/network/20-*.network "${BOOTSTRAP_INSTALL_MOUNT_DIR%%/}"/etc/systemd/network/

ln -vsfn /run/systemd/resolve/stub-resolv.conf "$BOOTSTRAP_INSTALL_MOUNT_DIR"/etc/resolv.conf

arch-chroot "$BOOTSTRAP_INSTALL_MOUNT_DIR" systemctl enable systemd-{networkd,resolved}.service
