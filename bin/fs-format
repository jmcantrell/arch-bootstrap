#!/usr/bin/env bash

set -euo pipefail

if ((${INSTALL_EFI:-0})); then
    mkfs.fat -F32 "$INSTALL_BOOT_DEVICE"
fi

mkfs.btrfs --label root "$INSTALL_ROOT_DEVICE"

mount "$INSTALL_ROOT_DEVICE" /mnt

btrfs-subvolumes | while read -r subvol; do
    btrfs subvolume create /mnt/"$subvol"
done

umount /mnt
