#!/usr/bin/env bash

set -euo pipefail

if [[ $BOOTSTRAP_BOOT_FIRMWARE == uefi ]]; then
    mkfs.fat -v -F32 "$BOOTSTRAP_BOOT_DEVICE"
fi

mkfs.btrfs --verbose --label "$BOOTSTRAP_FS_ROOT_LABEL" "$BOOTSTRAP_ROOT_DEVICE"

mkdir -p "$BOOTSTRAP_MOUNT"

mount --verbose "$BOOTSTRAP_ROOT_DEVICE" "$BOOTSTRAP_MOUNT"

while read -r name _; do
    btrfs subvolume create "$BOOTSTRAP_MOUNT/$name"
done < <(subvolumes)

umount --verbose "$BOOTSTRAP_MOUNT"
