#!/usr/bin/env bash

set -euo pipefail

while read -r subvol; do
    mnt=/mnt/${subvol#@}
    mkdir -p "$mnt"
    mount -o autodefrag,compress=zstd,subvol="$subvol" "$INSTALL_ROOT_DEVICE" "$mnt"
done <./btrfs-subvolumes

if ((${INSTALL_EFI:-0})); then
    mkdir -p /mnt/boot/efi
    mount "$INSTALL_BOOT_DEVICE" /mnt/boot/efi
fi
