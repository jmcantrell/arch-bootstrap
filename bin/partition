#!/usr/bin/env bash

set -eu

if ((${INSTALL_EFI:-0})); then
    boot_size=512
    boot_type=esp
else
    boot_size=2
    boot_type=bios_grub
fi

parted -s "$INSTALL_DEVICE" \
    mklabel gpt unit MiB \
    mkpart boot 0% "$boot_size" \
    set 1 "$boot_type" on \
    mkpart os "$boot_size" 100% \
    set 2 lvm on
