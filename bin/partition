#!/usr/bin/env bash

set -euo pipefail

sfdisk "$INSTALL_DEVICE" <<EOF
label: gpt
start=${INSTALL_PART_BOOT_START:-}, size=$INSTALL_PART_BOOT_SIZE, type=$INSTALL_PART_BOOT_TYPE, name=$INSTALL_PART_BOOT_NAME
start=${INSTALL_PART_SYS_START:-}, size=$INSTALL_PART_SYS_SIZE, type=$INSTALL_PART_SYS_TYPE, name=$INSTALL_PART_SYS_NAME
EOF
