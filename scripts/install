#!/usr/bin/env bash

set -euo pipefail

create-partitions

if [[ -v BOOTSTRAP_USE_LUKS ]]; then
    create-luks
    open-luks
fi

create-lvm

create-lvm-root
open-lvm-root
create-root
open-root

if [[ -v BOOTSTRAP_USE_SWAP ]]; then
    create-lvm-swap
    open-lvm-swap
    create-swap
    open-swap
fi

if [[ $BOOTSTRAP_BOOT_FIRMWARE == uefi ]]; then
    create-uefi
    open-uefi
fi

if [[ -v BOOTSTRAP_USE_LUKS ]]; then
    create-luks-keyfile
fi

install-packages

if [[ -v BOOTSTRAP_USE_TRIM ]]; then
    config-trim
fi

config-network

if [[ -v BOOTSTRAP_USE_WIRELESS ]]; then
    config-wireless
fi

config-hostname
config-timezone
config-ntp
config-lang
config-keymap
config-mirrors
config-admin
config-ssh
config-boot
config-initrd

install-locale
install-fstab
install-initrd
install-boot
