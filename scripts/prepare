#!/usr/bin/env bash

export BOOTSTRAP_ROOT_DIR=$PWD

export PATH=$BOOTSTRAP_ROOT_DIR/bin:$PATH

export BOOTSTRAP_LIB_DIR=$BOOTSTRAP_ROOT_DIR/lib
export BOOTSTRAP_CONFIG_DIR=${1:-${BOOTSTRAP_CONFIG_DIR:-$BOOTSTRAP_ROOT_DIR/config}}

. "$BOOTSTRAP_LIB_DIR"/source.bash

bootstrap_try_source "$BOOTSTRAP_CONFIG_DIR"/env || return

: "${BOOTSTRAP_INSTALL_DEVICE:?missing install device}"

bootstrap_source "$BOOTSTRAP_LIB_DIR"/prepare/*.bash
